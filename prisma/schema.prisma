generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model Employee {
  id            Int   @id @default(autoincrement())
  name          String 
  email         String @unique 
  role          Role
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model User {
  id            Int @id @default(autoincrement())
  email         String @unique
  name          String
  posts         Post[]
  profile       Profile?
  password      String
}

model Profile {
  id            Int @id @default(autoincrement())
  bio           String
  user          User @relation(fields: [userId], references: [id])
  userId        Int @unique
}

model Post {
  id            Int @id @default(autoincrement())
  createdAd     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  title         String
  author        User @relation(fields: [authorId], references: [id])
  authorId      Int
}


enum Role {
  INTERN
  ENGINEER
  ADMIN
}